---
import { Icon } from 'astro-icon/components';
import Logo from './Logo.astro';
import {
  getCurrentLocale,
  getLocaleStaticPaths,
  getTranslations,
  getLocaleUrl,
  type Locale,
  locales,
} from '~/i18n';
import HoverArrowText from './HoverArrowText.astro';

type Props = Record<string, never>;

const locale = getCurrentLocale(Astro.params);
export const getStaticPaths = getLocaleStaticPaths;
const t = getTranslations(locale);

const { pathname } = Astro.url;

const localeInUrl = Astro.url.pathname.split('/')[1];
let pathnameWithoutLocale = pathname;

if (locales.includes(localeInUrl as Locale)) {
  pathnameWithoutLocale = pathname.slice(locale.length + 1);
}
---

<footer class="main-footer">
  <div class="logo-area">
    <Logo />
    <p>{t.site.description}</p>
  </div>
  <div class="footer-grid">
    <div>
      <p class="footer-heading">{t.site.links}</p>
      <ul class="footer-list">
        <li>
          <a href={getLocaleUrl(locale, '/')}
            ><HoverArrowText>{t.site.home}</HoverArrowText></a
          >
        </li>
        <li>
          <a href={getLocaleUrl(locale, '/games/')}
            ><HoverArrowText>{t.site.games}</HoverArrowText></a
          >
        </li>
        <li>
          <a href={getLocaleUrl(locale, '/tools/')}
            ><HoverArrowText>{t.site.tools}</HoverArrowText></a
          >
        </li>
        <li>
          <a href={getLocaleUrl(locale, '/blog/')}>
            <HoverArrowText>{t.site.blog}</HoverArrowText>
          </a>
        </li>
        <li>
          <a href={getLocaleUrl(locale, '/about/')}
            ><HoverArrowText>{t.site.about}</HoverArrowText></a
          >
        </li>
      </ul>
    </div>

    <div>
      <p class="footer-heading">{t.language}</p>
      <ul class="footer-list">
        <li>
          <a href={getLocaleUrl('zh', pathnameWithoutLocale)}>中文</a>
        </li>
        <li>
          <a href={getLocaleUrl('en', pathnameWithoutLocale)}>English</a>
        </li>
      </ul>
    </div>

    <div class="footer-contact">
      <p class="footer-heading">{t.site.contact}</p>
      <address>
        <ul class="footer-list emails">
          <li>
            <a href="mailto:ex012@qq.com"> ex012@qq.com </a>
          </li>
        </ul>

        <ul class="links">
          <li>
            <a
              rel="noreferrer"
              target="_blank"
              href="https://github.com/HotranLandoler"
              title="Github">
              <Icon name="simple-icons:github" />
            </a>
          </li>
          <li>
            <a
              rel="noreferrer"
              target="_blank"
              href="https://gitee.com/hotran"
              title="Gitee">
              <Icon name="simple-icons:gitee" />
            </a>
          </li>
        </ul>
      </address>
    </div>

    <div>
      <p class="footer-heading">{t.site.relatedSites}</p>
      <ul class="footer-list related-sites">
        <li>
          <a
            class="flex gap-s"
            href="https://space.bilibili.com/3493083104676301"
            rel="noreferrer"
            target="_blank">
            UMi游研社
            <Icon name="mdi:external-link" />
          </a>
        </li>
        <li>
          <a
            class="flex gap-s"
            href="https://uma-studio.games/"
            rel="noreferrer"
            target="_blank">
            UMa Studio
            <Icon name="mdi:external-link" />
          </a>
        </li>
      </ul>
    </div>
  </div>

  <div class="bottom-row" lang="en">
    <div class="copyright">
      <small>{new Date().getFullYear()} © Lou Chaoli</small>
    </div>
  </div>
</footer>

<style>
  .main-footer {
    display: grid;
    grid-template-columns: subgrid;
    grid-column: span 2;
    padding-top: 3rem;
    padding-bottom: 2rem;

    border-top: 1px solid #eee;
    padding-inline: 1rem;

    color: var(--color-on-background);
  }

  .logo-area {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 2fr 2fr;
    align-items: flex-start;
    justify-items: flex-start;
    gap: 4rem;
  }

  .footer-heading {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .footer-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .bottom-row {
    display: grid;
    grid-template-columns: subgrid;
    grid-column: span 2;
    padding-top: 3rem;
  }

  .copyright {
    grid-column: 2 / 3;
  }

  .links {
    display: flex;
    align-items: center;
    gap: 0.85em;
  }

  [data-icon] {
    width: 1.5rem;

    .links & {
      color: var(--color-on-background);

      opacity: 0.5;
      transition: opacity 0.2s;

      &:hover,
      &:active {
        opacity: 1;
      }
    }

    .related-sites & {
      color: var(--color-on-background-light);
    }
  }

  .emails {
    margin-bottom: 1rem;
  }

  @media (width <= 768px) {
    .main-footer,
    .bottom-row {
      display: block;
    }
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
  }

  /* @media (max-width: 28em) {
    address {
      display: flex;
      gap: 3rem;
      align-items: flex-start;
    }
    .logo-area,
    .footer-contact {
      grid-column: span 2;
    }
    .emails {
      margin-bottom: 0;
    }
  } */
</style>
