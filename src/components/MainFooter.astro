---
import { Icon } from 'astro-icon/components';
import Logo from './Logo.astro';
import {
  getCurrentLocale,
  getLocaleStaticPaths,
  getTranslations,
  getLocaleUrl,
} from '~/i18n';

type Props = Record<string, never>;

const locale = getCurrentLocale(Astro.params);
export const getStaticPaths = getLocaleStaticPaths;
const t = getTranslations(locale);

const { pathname } = Astro.url;
---

<footer class="main-footer">
  <div class="logo-area">
    <Logo />
    <p class="mb-m">{t.site.description}</p>
  </div>
  <div class="footer-grid">
    <div>
      <p class="footer-heading">{t.site.links}</p>
      <ul class="footer-nav-list">
        <li>
          <a
            href={getLocaleUrl(locale, '/games/')}
            class="hover-link--underline">{t.site.games}</a
          >
        </li>
        <li>
          <a
            href={getLocaleUrl(locale, '/tools/')}
            class="hover-link--underline">{t.site.tools}</a
          >
        </li>
        <li>
          <a href={getLocaleUrl(locale, '/art/')} class="hover-link--underline">
            {t.site.art}
          </a>
        </li>
        <li>
          <a
            href={getLocaleUrl(locale, '/blog/')}
            class="hover-link--underline">
            {t.site.blog}
          </a>
        </li>
        <li>
          <a
            href={getLocaleUrl(locale, '/photos/')}
            class="hover-link--underline">{t.site.photos}</a
          >
        </li>
        <li>
          <a
            href={getLocaleUrl(locale, '/about/')}
            class="hover-link--underline">{t.site.about}</a
          >
        </li>
      </ul>
    </div>
    <div>
      <p class="footer-heading">{t.language}</p>
      <ul class="mb-m">
        <li>
          <a href={getLocaleUrl('zh', pathname)} class="hover-link--underline">
            中文
          </a>
        </li>
        <li>
          <a href={getLocaleUrl('en', pathname)} class="hover-link--underline">
            English
          </a>
        </li>
      </ul>
    </div>
    <div class="footer-contact">
      <p class="footer-heading">{t.site.contact}</p>
      <address>
        <ul class="emails">
          <li>
            <a
              href="mailto:louchaoli@stu.cqu.edu.cn"
              class="hover-link--underline">
              louchaoli@stu.cqu.edu.cn
            </a>
          </li>
          <li>
            <a href="mailto:ex012@qq.com" class="hover-link--underline">
              ex012@qq.com
            </a>
          </li>
          <!-- <li>
            <a href="#" class="link--outlined">简历 {`>`}</a>
          </li> -->
        </ul>

        <ul class="links">
          <li>
            <a
              rel="noreferrer"
              target="_blank"
              href="https://github.com/HotranLandoler"
              title="Github">
              <Icon name="simple-icons:github" class="icon" />
            </a>
          </li>
          <li>
            <a
              rel="noreferrer"
              target="_blank"
              href="https://gitee.com/hotran"
              title="Gitee">
              <Icon name="simple-icons:gitee" class="icon" />
            </a>
          </li>
        </ul>
      </address>
    </div>
  </div>

  <div class="bottom-row" lang="en">
    <div class="container flex">
      <small>© 2025 LOU Chaoli</small>
      <small class="ml-auto">Made with Astro.js</small>
    </div>
  </div>
</footer>

<style lang="scss">
  .main-footer {
    display: grid;
    grid-template-columns: subgrid;
    grid-column: span 2;
    border-top: 1px solid #eee;
    padding-inline: 1rem;

    color: var(--color-on-background);
  }

  .footer-grid {
    padding-top: 3rem;
    padding-bottom: 2rem;

    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    align-items: flex-start;
    justify-items: flex-start;
    gap: 4rem;
  }

  .footer-heading {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .bottom-row {
    padding: 2rem 0;
  }

  .made-with {
    margin-left: auto;
  }

  .links {
    padding: 0 0.5rem;

    display: flex;
    align-items: center;
    gap: 1.5em;
  }
  .links a {
    display: inline-block;
    cursor: pointer;
  }
  .icon,
  .icon-img {
    color: var(--color-on-background);

    opacity: 0.5;
    transition: opacity 0.2s;
  }
  .icon:hover,
  .icon:active,
  .icon-img:hover,
  .icon-img:active {
    opacity: 1;
  }
  .icon-img {
    filter: grayscale(100%);
  }
  .emails {
    margin-bottom: 1rem;
  }

  .logo-area {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media (max-width: 60em) {
    .footer-grid {
      gap: 1rem;
    }
  }

  @media (max-width: 48em) {
    // .container {
    //   max-width: 40rem;
    // }
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      row-gap: 0;
      column-gap: 3rem;
    }
  }

  @media (max-width: 28em) {
    address {
      display: flex;
      gap: 3rem;
      align-items: flex-start;
    }
    .logo-area,
    .footer-contact {
      grid-column: span 2;
    }
    .emails {
      margin-bottom: 0;
    }
  }
</style>
