---
import { t } from "i18next";
import BaseLayout from "./BaseLayout.astro";

export interface Props {
  titleKey: string;
}

const { titleKey } = Astro.props;
---

<BaseLayout title={t(titleKey)}>
  <main class="page-main">
    <header class="page-header">
      <h1 class="page-heading">{t(titleKey)}</h1>
    </header>
    <slot />
  </main>
</BaseLayout>

<style>
  .page-main {
    padding-bottom: 8rem;
  }
  .page-header {
    padding-top: 8rem;
    padding-bottom: 2rem;
    text-align: center;
  }
  .page-heading {
    font-family: serif;
  }
</style>
