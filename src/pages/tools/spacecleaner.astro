---
import { t, changeLanguage } from "i18next";
import SubPageLayout from "../../layouts/SubPageLayout.astro";
import SpaceCleanerApp from "../../components/tools/SpaceCleaner.svelte";

changeLanguage("zh");

const trans = {
    inputText: t("tools.spacecleaner.inputText"),
    cleanLb: t("tools.spacecleaner.cleanLineBreaks"),
    clean: t("tools.spacecleaner.clean"),
};
---

<SubPageLayout titleKey="tools.spacecleaner.title">
  <div class="container">
    <SpaceCleanerApp client:load trans={trans} />
  </div>
</SubPageLayout>

<style>
  .container {
    max-width: 32rem;
  }
</style>
