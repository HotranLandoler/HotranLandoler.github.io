---
import { t, changeLanguage } from "i18next";
import SubPageLayout from "../../../layouts/SubPageLayout.astro";
import SquidDetectorApp from "../../../components/tools/SquidDetector.svelte";

changeLanguage("en");

const trans = {
    detect: t("tools.squid.detect"),
    output: t("tools.squid.output"),
};
---

<SubPageLayout titleKey="tools.squid.title">
  <div class="container">
    <SquidDetectorApp client:load trans={trans} />
  </div>
</SubPageLayout>

<style>
  .container {
    max-width: 32rem;
  }
</style>
