---
import { Image } from 'astro:assets';
import Trans from '~/components/Trans.astro';
import { Icon } from 'astro-icon/components';
import GameLayout from '~/layouts/GameLayout.astro';
import banner from '~/images/cqu-horror/cqu-horror-title.webp';
import icon1 from '~/images/cqu-horror/HP.png';
import icon2 from '~/images/cqu-horror/San.png';
import { getCurrentTranslations, getLocaleStaticPaths } from '~/i18n';

export const getStaticPaths = getLocaleStaticPaths;

const gameKey = 'cquHorror';

const t = getCurrentTranslations(Astro.params);

const gameTranslations = t.games[gameKey];
---

<GameLayout
  gameKey={gameKey}
  bannerSrc={banner}
  gameLink="https://uma-studio.itch.io/cqu-horror"
  srcLink="https://github.com/HotranLandoler/CQU-Horror"
  pubDate="2021-8-20"
  textColor="white"
  backgroundColor="#020202"
  foregroundColor="#272216"
  primaryColor="#a97f4d"
  primaryDarkColor="#433120"
  onPrimaryColor="white"
  surfaceColor="#080e0a">
  <p>
    {t.games.cquHorror.intro}
  </p>
  <div slot="info-main">
    <section>
      <header class="text-icon-container mb-s">
        <Image class="heading-icon pixel" src={icon1} alt="Health" />
        <h2>{t.games.howToPlay}</h2>
      </header>
      <p>
        {t.games.cquHorror.howTo1}
      </p>
      <p>
        {t.games.cquHorror.howTo2}
      </p>
    </section>
    <section>
      <header class="text-icon-container mb-s">
        <Image class="heading-icon pixel" src={icon2} alt="Sanity" />
        <h2>{t.games.note}</h2>
      </header>
      <p>{t.games.cquHorror.note1}</p>
      <p>{t.games.cquHorror.note2}</p>
    </section>
  </div>
  <span slot="platforms">
    <Icon name="mdi:microsoft-windows" title="Windows" />
  </span>
  <span slot="language">中文</span>
  <ul slot="team">
    <Trans localizedText={gameTranslations.team}>
      <li>楼朝立：程序，美术</li>
      <li>ZJX：主策划</li>
      <li>Mr.Haoren：策划</li>
      <li>HYW：策划</li>
    </Trans>
  </ul>
</GameLayout>

<style>
  .divider-container {
    max-width: 10rem;
  }
  .divider {
    display: block;
    width: 100%;
    height: auto;
  }
  .side-img {
    width: 25%;
  }
</style>
