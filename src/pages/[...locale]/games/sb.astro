---
import { Image } from 'astro:assets';
import Trans from '~/components/Trans.astro';
import { Icon } from 'astro-icon/components';
import GameLayout from '~/layouts/GameLayout.astro';
import banner from '~/images/sb/SB.webp';
import icon1 from '~/images/sb/\u79E6\u534A\u4E24.webp';
import icon2 from '~/images/sb/\u7EB8\u5E01.webp';
import { getCurrentTranslations, getLocaleStaticPaths } from '~/i18n';

export const getStaticPaths = getLocaleStaticPaths;

const gameKey = 'sb';

const t = getCurrentTranslations(Astro.params);
const gameTranslations = t.games[gameKey];
---

<GameLayout
  gameKey="sb"
  bannerSrc={banner}
  gameLink="https://gitee.com/dubhe-team/game-jam/"
  srcLink="https://gitee.com/dubhe-team/game-jam/"
  pubDate="2022-1-16"
  textColor="#111"
  backgroundColor="#f4ebda"
  foregroundColor="#f4ebda"
  primaryColor="#269ffc"
  primaryDarkColor="#ceb78a"
  onPrimaryColor="white"
  surfaceColor="#ceb78a">
  <p>
    {t.games.sb.intro}
  </p>
  <div slot="info-main">
    <section>
      <header class="text-icon-container mb-s">
        <Image class="heading-icon" src={icon1} alt="秦半两" />
        <h2>{t.games.howToPlay}</h2>
      </header>
      <p>
        {t.games.sb.howTo1}
      </p>
      <p>
        {t.games.sb.howTo2}
      </p>
    </section>
    <section>
      <header class="text-icon-container mb-s">
        <Image class="heading-icon" src={icon2} alt="纸币" />
        <h2>{t.games.note}</h2>
      </header>
      <p>{t.games.sb.note}</p>
    </section>
  </div>
  <span slot="platforms">
    <Icon name="mdi:microsoft-windows" title="Windows" />
  </span>
  <span slot="language">中文</span>
  <ul slot="team">
    <Trans localizedText={gameTranslations.team}>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
    </Trans>
  </ul>
</GameLayout>

<style>
  .side-img {
    max-width: 10rem;
  }
</style>
