---
import { Image } from 'astro:assets';
import Trans from '~/components/Trans.astro';
import { Icon } from 'astro-icon/components';
import GameLayout from '~/layouts/GameLayout.astro';
import banner from '~/images/poopy-bird/PoopyBirdBanner.jpg';
import icon1 from '~/images/poopy-bird/poop-black.svg';
import icon2 from '~/images/poopy-bird/poop-white.svg';
import { getCurrentTranslations, getLocaleStaticPaths } from '~/i18n';

export const getStaticPaths = getLocaleStaticPaths;

const gameKey = 'poopybird';

const t = getCurrentTranslations(Astro.params);
const gameTranslations = t.games[gameKey];

const surfaceColor = '#eeeeee';
---

<GameLayout
  gameKey={gameKey}
  bannerSrc={banner}
  gameLink="https://uma-studio.itch.io/poopy-bird"
  srcLink="https://gitee.com/uma-studio/ggj2024"
  pubDate="2024-1-28"
  textColor="#222222"
  backgroundColor="white"
  foregroundColor="white"
  primaryColor="#3dc1ab"
  primaryDarkColor="#26aa94"
  onPrimaryColor="white"
  surfaceColor={surfaceColor}>
  <p>
    {gameTranslations.intro}
  </p>
  <div slot="info-main">
    <section>
      <header class="text-icon-container mb-s">
        <Image class="heading-icon" src={icon1} alt="Tape" />
        <h2>{t.games.howToPlay}</h2>
      </header>
      <p>
        {gameTranslations.howTo}
      </p>
    </section>
    <section>
      <header class="text-icon-container mb-s">
        <Image class="heading-icon" src={icon2} alt="Triangle" />
        <h2>{t.games.note}</h2>
      </header>
      <p>
        {gameTranslations.note}
      </p>
    </section>
    <iframe
      class="video"
      src="https://player.bilibili.com/player.html?aid=284326210&bvid=BV1Wc411v7iL&cid=1422093472&p=1&autoplay=0"
      allow="fullscreen"
      title="Bilibili video for Poopy Bird">
    </iframe>
  </div>

  <span slot="platforms">
    <Icon name="mdi:microsoft-windows" title="Windows" />
    <Icon name="simple-icons:webgl" title="Web" />
  </span>
  <span slot="language">English</span>
  <ul slot="team">
    <Trans localizedText={gameTranslations.team}>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
    </Trans>
  </ul>
</GameLayout>

<style define:vars={{ surfaceColor }}>
  .video {
    background-color: var(--surfaceColor);
  }
</style>
